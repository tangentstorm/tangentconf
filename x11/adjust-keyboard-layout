! this is my xmodmap to arrange my keyboard the way I like

clear Shift
clear Control

! swap left control and left shift
keycode 50 =	Control_L	NoSymbol	Control_L
keycode 37 =	Shift_L	        NoSymbol	Shift_L

! leave right shift and alt alone
keycode 105 =	Control_L	NoSymbol	Control_L
keycode 62  =	Shift_R	        NoSymbol	Shift_R

add    Shift   = Shift_L Shift_R
add    Control = Control_L
